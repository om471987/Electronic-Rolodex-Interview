<Window x:Class="ElectronicRolodex.Desktop.NewAddress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewAddress" Height="400" Width="400">
    <Grid>
      <Label Content="Address Type" HorizontalAlignment="Left" Height="30" Margin="15,22,0,0" VerticalAlignment="Top" Width="120"/>
      <ComboBox Margin="155,22,0,0" Name="AddressTypeComboBox" HorizontalAlignment="Left"
         VerticalAlignment="Top" Width="189" Height="30">
         <ComboBoxItem Content="Office"></ComboBoxItem>
         <ComboBoxItem Content="Home"></ComboBoxItem>
      </ComboBox>
      <Label Content="Number" HorizontalAlignment="Left" Height="30" Margin="15,67,0,0" VerticalAlignment="Top" Width="120"/>
      <TextBox Name="Number" HorizontalAlignment="Left" Height="30" Margin="155,67,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="189"/>

      <Label Content="Street Name" HorizontalAlignment="Left" Height="30" Margin="15,105,0,0" VerticalAlignment="Top" Width="120"/>
      <TextBox Name="StreetName" HorizontalAlignment="Left" Height="30" Margin="155,105,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="189"/>

      <Label Content="Apt /Office /Room" HorizontalAlignment="Left" Height="30" Margin="15,143,0,0" VerticalAlignment="Top" Width="120"/>
      <TextBox Name="AptOfficeRoom" HorizontalAlignment="Left" Height="30" Margin="155,143,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="189"/>

      <Label Content="City" HorizontalAlignment="Left" Height="30" Margin="15,185,0,0" VerticalAlignment="Top" Width="120"/>
      <TextBox Name="City" HorizontalAlignment="Left" Height="30" Margin="155,185,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="189"/>

      <Label Content="ZipCode" HorizontalAlignment="Left" Height="30" Margin="15,226,0,0" VerticalAlignment="Top" Width="120"/>
      <TextBox Name="ZipCode" HorizontalAlignment="Left" Height="30" Margin="155,226,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="189"/>
      <Button Content="Submit" HorizontalAlignment="Left" Margin="269,299,0,0" VerticalAlignment="Top" Width="75" Click="AddNewAddressClick"/>
   </Grid>
</Window>
