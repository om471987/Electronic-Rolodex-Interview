<Window x:Class="ElectronicRolodex.Desktop.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Electronic Rolodex" WindowState="Maximized">
   <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
      <Label Content="Username" HorizontalAlignment="Left" Margin="19,230,0,0" VerticalAlignment="Top"/>
      <TextBox Name="User" HorizontalAlignment="Left" Height="23" Margin="139,233,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
       
      <Label Content="Password" HorizontalAlignment="Left" Margin="19,278,0,0" VerticalAlignment="Top"/>
      <PasswordBox  Name="Password" HorizontalAlignment="Left" Height="23" Margin="139,281,0,0" VerticalAlignment="Top" Width="120"/>
       
      <Button Name="LoginButton" Content="Submit" HorizontalAlignment="Left" Margin="266,327,20,20" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
      <Image Source="/Resources/Images/logo.jpg" Height="134" Margin="19,19,52,0" VerticalAlignment="Top"/>

      <Label Name="Error" Content="" Foreground="Red" HorizontalAlignment="Left" Margin="139,309,0,0" VerticalAlignment="Top" Width="170"/>
   </Grid>
</Window>
