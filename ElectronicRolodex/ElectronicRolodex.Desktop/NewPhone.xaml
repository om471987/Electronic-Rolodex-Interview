<Window x:Class="ElectronicRolodex.Desktop.NewPhone"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewPhone" Height="400" Width="400">
    <Grid>
      <Label Content="Address Type" HorizontalAlignment="Left" Height="30" Margin="15,22,0,0" VerticalAlignment="Top" Width="120"/>
      <ComboBox Margin="155,22,0,0" Name="PhoneTypeComboBox" HorizontalAlignment="Left"
         VerticalAlignment="Top" Width="189" Height="30">
         <ComboBoxItem Content="Office"></ComboBoxItem>
         <ComboBoxItem Content="Home"></ComboBoxItem>
      </ComboBox>
      <Label Content="Number" HorizontalAlignment="Left" Height="30" Margin="15,67,0,0" VerticalAlignment="Top" Width="120"/>
      <TextBox Name="Number" HorizontalAlignment="Left" Height="30" Margin="155,67,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="189"/>

      <Button Content="Submit" HorizontalAlignment="Left" Margin="269,129,0,0" VerticalAlignment="Top" Width="75" Click="AddNewPhoneClick"/>
   </Grid>
</Window>
